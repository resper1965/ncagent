# Dockerfile Simplificado para n.agent
FROM node:18-alpine

WORKDIR /app

# Copiar package.json
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/

# Instalar dependências
RUN npm ci
RUN cd apps/web && npm ci

# Copiar código
COPY . .

# Build
RUN cd apps/web && npm run build

# Expor porta
EXPOSE 3000

# Comando simples
CMD ["cd", "apps/web", "&&", "npm", "start"]
