# ========================================
# Supabase - Exemplo de Variáveis de Ambiente
# ========================================
# Copie este arquivo para .env e preencha com seus valores

############
# SECRETS (OBRIGATÓRIAS)
############

POSTGRES_PASSWORD=your-secure-postgres-password
JWT_SECRET=your-jwt-secret-key
ANON_KEY=your-anon-key-here
SERVICE_ROLE_KEY=your-service-role-key-here
DASHBOARD_USERNAME=supabase
DASHBOARD_PASSWORD=your-dashboard-password
SECRET_KEY_BASE=your-secret-key-base
VAULT_ENC_KEY=your-vault-encryption-key

############
# DATABASE (OBRIGATÓRIAS)
############

POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432

############
# API CONFIGURATION (OBRIGATÓRIAS)
############

PGRST_DB_SCHEMAS=public,storage,graphql_public
FUNCTIONS_VERIFY_JWT=false

############
# AUTH CONFIGURATION (OBRIGATÓRIAS)
############

SITE_URL=https://your-domain.com
ADDITIONAL_REDIRECT_URLS=https://your-domain.com
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
API_EXTERNAL_URL=https://your-domain.com/api
ENABLE_ANONYMOUS_USERS=false

############
# EMAIL AUTH (OBRIGATÓRIAS)
############

ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
ENABLE_PHONE_SIGNUP=true
ENABLE_PHONE_AUTOCONFIRM=true

############
# STUDIO CONFIGURATION (OBRIGATÓRIAS)
############

STUDIO_DEFAULT_ORGANIZATION=Your Organization
STUDIO_DEFAULT_PROJECT=Your Project
STUDIO_PORT=3000
SUPABASE_PUBLIC_URL=https://your-domain.com

############
# POOLER CONFIGURATION (OBRIGATÓRIAS)
############

POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_TENANT_ID=your-tenant-id

############
# KONG CONFIGURATION (OBRIGATÓRIAS)
############

KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

############
# LOGGING (OBRIGATÓRIAS)
############

LOGFLARE_LOGGER_BACKEND_API_KEY=your-logflare-backend-key
LOGFLARE_API_KEY=your-logflare-api-key
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

############
# IMAGE PROCESSING (OBRIGATÓRIO)
############

IMGPROXY_ENABLE_WEBP_DETECTION=true

############
# MAILER URLS (OBRIGATÓRIAS)
############

MAILER_URLPATHS_CONFIRMATION=https://your-domain.com/auth/v1/verify
MAILER_URLPATHS_INVITE=https://your-domain.com/auth/v1/verify
MAILER_URLPATHS_RECOVERY=https://your-domain.com/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=https://your-domain.com/auth/v1/verify

############
# SMTP (OBRIGATÓRIAS)
############

SMTP_ADMIN_EMAIL=admin@your-domain.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=Your Platform Name
